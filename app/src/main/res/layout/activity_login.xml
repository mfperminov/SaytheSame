<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >
  <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/title_enter_screen"
      android:textSize="20sp"
      app:layout_constraintTop_toTopOf="parent"
      />
  <TextView
      android:id="@+id/slogan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/slogan_enter_screen"
      android:textSize="16sp"
      app:layout_constraintTop_toBottomOf="@id/title"
      />


  <FrameLayout
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintTop_toBottomOf="@id/slogan"
      >
  </FrameLayout>

  <TextView
      android:id="@+id/text_signin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Or sign-in with"
      android:textSize="20sp"
      app:layout_constraintBottom_toTopOf="@id/btn_google"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      />

  <ImageView
      android:id="@+id/btn_google"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:src="@drawable/btn_google"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/btn_facebook"


      />
  <ImageView
      android:id="@+id/btn_facebook"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:padding="6dp"
      android:src="@drawable/facebook"
      app:layout_constraintBottom_toBottomOf="@+id/btn_google"
      app:layout_constraintLeft_toRightOf="@+id/btn_google"
      app:layout_constraintRight_toLeftOf="@+id/btn_vk"
      app:layout_constraintTop_toTopOf="@+id/btn_google"
      />
  <ImageView
      android:id="@+id/btn_vk"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:src="@drawable/vk"
      app:layout_constraintBottom_toBottomOf="@+id/btn_facebook"
      app:layout_constraintLeft_toRightOf="@+id/btn_facebook"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/btn_facebook"
      app:layout_constraintVertical_bias="0.0"
      />


</android.support.constraint.ConstraintLayout>